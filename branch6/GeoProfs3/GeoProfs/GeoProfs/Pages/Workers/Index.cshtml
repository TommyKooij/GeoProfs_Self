@page
@model GeoProfs.Pages.Workers.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Worker[0].FirstMidName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Worker[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Worker[0].EnrollmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Worker[0].Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Worker[0].IsPresent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Worker[0].maxAbsenceDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Worker[0].totalSickDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Worker[0].totalOffDays)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Worker) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMidName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPresent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.maxAbsenceDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalSickDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalOffDays)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
