@page
@model GeoProfs.Pages.Calendars.IndexModel

@{
    ViewData["Title"] = "Calendar Index";
}

<h1>Calendar Entries</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CalendarEvent[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CalendarEvent[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CalendarEvent[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CalendarEvent[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CalendarEvent[0].Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CalendarEvent) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
